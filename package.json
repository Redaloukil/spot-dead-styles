{
    "name": "spot-dead-styles",
    "displayName": "Spot Dead Styles",
    "description": "locate dead style declaration that are not used in the component styling file",
    "contributes": {
        "commands": [
            {
                "command": "spot-dead-styles-ng.check",
                "title": "Check if the selected template contain classes that are not in the scss file "
            }
        ],
        "configuration": {
            "title": "Spot dead styles",
            "properties": {
                "spotDeadStyles.ignoreClassPrefixes": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [],
                    "description": "Prefixes of class names to ignore."
                }
            }
        }
    },
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.96.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:spot-dead-styles-ng.check",
        "onLanguage:html",
        "onLanguage:scss"
    ],
    "main": "./dist/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "npm run check-types && npm run lint && node esbuild.js",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "esbuild src/extension.ts --outdir=dist --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "package": "npm run check-types && npm run lint && node esbuild.js --production",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "check-types": "tsc --noEmit",
        "lint": "eslint src",
        "test": "vscode-test",
        "jest": "jest"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.26.0",
        "@jest/globals": "^29.7.0",
        "@types/jest": "^29.5.14",
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@types/vscode": "^1.96.0",
        "@typescript-eslint/eslint-plugin": "^8.17.0",
        "@typescript-eslint/parser": "^8.17.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "babel-jest": "^29.7.0",
        "esbuild": "^0.24.0",
        "eslint": "^9.16.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-prettier": "^5.2.3",
        "jest": "^29.7.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.4.2",
        "ts-jest": "^29.2.5",
        "typescript": "^5.7.2"
    },
    "dependencies": {
        "@angular/compiler": "^19.0.6",
        "postcss": "^8.4.49",
        "postcss-scss": "^4.0.9",
        "postcss-selector-parser": "^7.0.0"
    }
}
